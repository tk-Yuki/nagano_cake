<h2 class="p-3 mb-2 bg-light text-dark text-center w-25">商品一覧</h2>
<%= link_to "+", new_admin_item_path %>
<table class='table table-hover table-inverse'>
  <tr>
    <th>商品ID</th>
    <th>商品名</th>
    <th>税抜価格</th>
    <th>ジャンル</th>
    <th>ステータス</th>
    <th colspan="5"></th>
  </tr>

  <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.name, admin_item_path(item.id) %></td>
      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>
      <td><% if item.is_active == true %>
          	<p><i class="fas fa-bullseye red"></i>販売中</p>
          <% elsif item.is_active == false %>
          	<p><i class="fas fa-bullseye blue"></i>販売停止中</p>
          <% end %>
      </td>
    </tr>
  <% end %>
</table>