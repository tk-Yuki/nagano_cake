<%#= render 'headers/header', item: @item %>

<h1>商品新規登録</h1>

<%= form_with model: @item,url: admin_items_path, local:true do |f| %>

  <div class="form-group">
    <%= f.label :image_id, "商品画像" %>
    <%= f.attachment_field :image %>
  </div>

  <div class="form-group">
    <%= f.label :name, "商品名" %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :introduction, "商品説明" %>
    <%= f.text_area :introduction %>
  </div>

  <div class="form-group">
    <%= f.label :genre, "ジャンル" %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
  </div>

  <div class="form-group">
    <%= f.label :price, "税抜価格" %>
    <%= f.number_field :price %>円
  </div>

  <div class="form-group">
    <%= f.label :is_active, "販売ステータス" %>
   <%= f.radio_button :is_active, 0,checked: true %>販売中<%= f.radio_button :is_active, 1 %>販売停止中
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>

<% end %>

