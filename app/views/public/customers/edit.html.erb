 <h3>会員情報編集</h3>
 <%= form_with model:@customer, url:customer_path(current_customer) do |f| %>
 <div class="field">
    <%= f.label "名前" %><br />
    (姓)<%= f.text_field :last_name %>(名)<%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label "フリガナ" %><br />
    (セイ）<%= f.text_field :last_name_kana %>(メイ)<%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label "郵便番号(ハイフンなし)" %><br />
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label "住所" %><br />
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label "電話番号(ハイフンなし)" %><br />
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email %>
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存", class:"btn btn-success" %>
    <%= link_to "退会する", unsubscride_path, class:"btn btn-danger" %>
  </div>
<% end %>