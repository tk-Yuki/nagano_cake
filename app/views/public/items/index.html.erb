<div class="container ml-5">
  <div class="row">
    <div class ="col-3">
      ジャンル検索
    </div>
    <div class ="col-9">
      <h3>商品一覧</h3>
      <div class="d-flex">
        <% @items.each do |item| %>
        <div style="width:25%;">
          <%= link_to item_path(item.id) do %>
            <%= attachment_image_tag item, :image, size:'100x100' %></br>
            <%= item.name %></br>
          <% end %>
          ¥<%= item.price %>
        </div>
        <% end %>
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>