<h3>配送先編集</h3>

<%= form_with model: @address do |f| %>
  <div class="field">
    <%= f.label "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "" %>
  </div>

  <div class="field">
    <%= f.label "住所" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "" %>
  </div>

  <div class="field">
    <%= f.label "宛名" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "" %>
  </div>

  <div class="actions">
    <%= f.submit "変更内容を保存", class:"btn btn-success" %>
<% end %>
