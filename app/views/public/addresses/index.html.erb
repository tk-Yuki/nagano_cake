<h3>配送先登録/一覧</h3>
<%= form_with model: @address do |f| %>
  <div class="field">
    <%= f.label :"郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"住所" %>
    <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"宛名" %>
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class:"btn btn-success" %>
  </div>
<% end %>
<% @addresses.each do |addresses| %>
  <table class="table table-hover table-inverse">
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
    <tr>
        <td><%= addresses.postal_code %></td>
        <td><%= addresses.address %></td>
        <td><%= addresses.name %></td>
        <td><%= link_to "編集する", edit_address_path(addresses.id), class:"btn btn-success" %><%= link_to "削除する", address_path(addresses.id), method: :delete, class:"btn btn-danger" %></td>
    </tr>
  </table>
<% end %>
