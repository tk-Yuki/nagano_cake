<h3>注文履歴詳細</h3>
<h4>注文情報</h4>
<table class='table table-hover table-inverse'>
  <tr>
    <th>注文日</th>
    <td><%= @order.created_at %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td><%= @order.address %></td>
  </tr>
  <tr>
    <th>支払方法</th>
    <td><%= @order.payment_method_i18n %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <td><%= @order.order_status_i18n %></td>
  </tr>
</table>

<h4>請求情報</h4>
<table>
  <tr>
    <th>商品合計</th>
    <td><%= @order.total_amount %></td>
  </tr>
    <tr>
    <th>配送料</th>
    <td>800</td>
  </tr>
  <tr>
    <th>ご請求額</th>
    <td><%= @order.total_amount + @order.shipping_cost %></td>
  </tr>
</table>

<h4>注文内容</h4>
<table class='table table-hover table-inverse'>
  <tr>
    <th>商品</th>
    <th>単価（税込）</th>
    <th>個数</th>
    <th>小計</th>
  </tr>

  <% @order.order_details.each do |order| %>
  <tr>
    <td><%= order.item.name %></td>
    <td><%= order.item.with_tax_price %></td>
    <td><%= order.amount %></td>
    <td><%= order.price %></td>
  </tr>
  <% end %>
</table>