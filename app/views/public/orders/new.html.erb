<h3>注文情報入力</h3>
<h4>支払い方法</h4>
　<%= form_with model:@order, url:orders_confirm_path, local:true do |f| %>
    <%= f.radio_button :payment_method, Order.payment_methods.key(0), checked: true %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
<h4>お届け先</h4>
　<%= f.radio_button :address_option, 0,checked: true %>ご自身の住所</br>
　<%= f.radio_button :address_option, 1 %>登録済み住所から選択
　  <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :full_address) %></br>
　<%= f.radio_button :address_option, 2 %>新しいお届け先
　<div class="field">
    <%= f.label "郵便番号(ハイフンなし)" %><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "" %>
  </div>
  <div class="field">
    <%= f.label "住所" %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "" %>
  </div>
  <div class="field">
    <%= f.label "宛名" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "" %>
  </div>
  <div class="actions">
    <%= f.submit "確認画面へ進む", class:"btn btn-primary" %>
  </div>


　<% end %>




